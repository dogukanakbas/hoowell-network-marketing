# HOOWELL Production Environment Variables
# Sunucuda .env dosyasÄ±na kopyalanacak

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_production_database_password
DB_NAME=hoowell_network

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_for_production_change_this

# Server Configuration
PORT=5001

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_NAME=HOOWELL
FROM_EMAIL=your_email@gmail.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/receipts/

# Security
CORS_ORIGIN=http://your-domain.com
SESSION_SECRET=your_session_secret_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log