# HOOWELL Production Environment Template
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun

# Database Configuration
DB_HOST=localhost
DB_USER=hoowell_user
DB_PASSWORD=your_strong_database_password
DB_NAME=hoowell_network

# JWT Configuration (256-bit güçlü key kullanın)
JWT_SECRET=your_super_secure_jwt_secret_key_256_bit_minimum

# Application Configuration
NODE_ENV=production
PORT=5001

# Email Configuration (Gmail SMTP örneği)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
FROM_NAME=HOOWELL
FROM_EMAIL=your-email@gmail.com

# Deployment Configuration
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# Security Configuration
CORS_ORIGIN=https://your-domain.com
SESSION_SECRET=your_session_secret_key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log